<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/activity_detail"
              tools:context=".MainDetail">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_item_photo"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@android:color/darker_gray"

            />
    <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_item_photo"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            >
        <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Pecel"
                />

        <TextView
                android:id="@+id/tv_item_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textSize="16sp"
                tools:text="Khas Surabaya"
        />


    </LinearLayout>
    </RelativeLayout>

    <TextView
            android:id="@+id/tv_item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textSize="16sp"
            tools:text="Rujak adalah makanan tradisional yang biasanya terbuat dari campuran berbagai macam sayuran atau buah dan dibubuhi bumbu atau kuah yang dicampuri cabe. "

    />


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

    >

        <TextView
                android:id="@+id/label_item_kota"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/kota"
        />


        <TextView
                android:id="@+id/label_item_bahan"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_item_kota"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/bahan"
        />
        <TextView
                android:id="@+id/label_item_harga"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_item_bahan"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/harga"
        />

        <TextView
                android:id="@+id/tv_item_kota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/label_item_kota"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"

                android:textSize="16sp"
                tools:text="Surabaya"
        />

        <TextView
                android:id="@+id/tv_item_bahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_item_kota"
                android:layout_toEndOf="@id/label_item_bahan"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:gravity="end"
                android:textSize="16sp"
                tools:text="Daging Ayam"
        />
        <TextView
                android:id="@+id/tv_item_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_item_bahan"
                android:layout_toEndOf="@id/label_item_harga"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:gravity="end"
                android:textSize="16sp"
                tools:text="Rp.20.000 - 50.000"
        />

</RelativeLayout>














</LinearLayout>

